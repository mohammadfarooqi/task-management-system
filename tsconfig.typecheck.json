{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "emitDeclarationOnly": false,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true,
    "lib": ["es2022", "dom", "dom.iterable"]
  },
  "include": [
    "apps/**/*.ts",
    "libs/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/node_modules",
    "**/dist",
    "**/jest.config.ts"
  ]
}